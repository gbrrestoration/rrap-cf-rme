# =============================================================================
# RMECf Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the values for your environment
# Required variables must be set, optional variables have defaults

# =============================================================================
# REQUIRED: Mount Paths
# =============================================================================
# Location of the ReefMod Engine data files
RME_PATH=/path/to/rme/data

# Output directory for simulation results
OUTPUTS_PATH=/path/to/outputs

# =============================================================================
# REQUIRED: AWS S3 File Storage
# =============================================================================

AWS_REGION=ap-southeast-2
S3_STORAGE_PATH=<SUPPLY s3://path/here>

# =============================================================================
# REQUIRED: Simulation Configuration
# =============================================================================
# Name to associate with this set of runs
RUN_NAME=Example

# Simulation time range
START_YEAR=2022
END_YEAR=2030

# RCP/SSP scenario (e.g., "SSP 2.45", "SSP 1.26", "SSP 5.85")
RCP_SCEN=SSP 2.45

# Global Climate Model (e.g., "CNRM_ESM2_1", "GFDL_ESM4", "IPSL_CM6A_LR")
GCM=CNRM_ESM2_1

# Number of random environmental sequences to run
REPS=1

# =============================================================================
# OPTIONAL: Execution Configuration
# =============================================================================
# Number of threads to use for parallel processing
# Default: 2
THREAD_COUNT=2

# Use fixed random seed (1 = true, 0 = false)
# Default: 1
USE_FIXED_SEED=1

# Fixed seed value for reproducibility
# Default: 123.0
FIXED_SEED=123.0

# Coral outplanting density per square meter
# Default: 6.8
D_DENSITY_M2=6.8

# Run identifier for organizing outputs
# Default: 0
RUN_ID=0

# Target locations mode: FULL, MEDIUM, SMALL, GBRMPA_GENERAL_MANAGEMENT_ZONES, GBRMPA_PRESERVATION_ZONES, MOORE_REEF_CLUSTER, or NORTH_GBR
# This determines which target_locations CSV file to use
# Default: default (will cause an error, must be set to one of the above values)
TARGET=SMALL
